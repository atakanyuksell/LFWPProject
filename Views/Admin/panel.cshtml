@model List<LawFirmWebPage.Entities.ContactMessage>

@{
    ViewData["Title"] = "Panel";
}
<main>
    <div class="container my-5">
        <h2 class="text-center mb-4">Gelen Mesajlar</h2>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>Email</th>
                        <th>Mesaj</th>
                        <th>Tarih</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var msg in Model)
                    {
                        <tr>
                            <td>@msg.Name</td>
                            <td>@msg.Surname</td>
                            <td>@msg.Email</td>
                            <td>@msg.Message</td>
                            <td>@msg.SentDate.ToString("dd.MM.yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</main>
